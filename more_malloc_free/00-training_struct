#include <stdio.h>
#include <string.h>

struct Livre {
	char titre [200];	 
	char auteur [200];
	int annee;
	};

	typedef struct Livre Livre;

void afficherLivre(struct Livre livre){
	printf("============");
	printf("Titre: %s\n", livre.titre);
	printf("Auteur : %s\n", livre.auteur);
	printf("Annee : %d\n", livre.annee);
	printf("============");
}

int main() {
	 struct Livre livre1;
	livre1.annee = 1997;
	strcpy(livre1.titre, "Harry potter");
	strcpy(livre1.auteur, "JK Rowling");

	afficherLivre(livre1);

	return (0);
}
